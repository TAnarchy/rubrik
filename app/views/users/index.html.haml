%h1
  Listing users
%table
  %tr
    %th
      Username
    %th
      Hashed pass
    %th
      Email
    %th
      Name
  - @users.each do |user|
    %tr
      %td
        = h user.username
      %td
        = h user.hashed_pass
      %td
        = h user.email
      %td
        = h user.name
      %td
        = link_to 'Show', user
      %td
        = link_to 'Edit', edit_user_path(user)
      %td
        = link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete

%br
= link_to 'New user', new_user_path
